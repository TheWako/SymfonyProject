{% extends 'base.html.twig' %}

{% block body %}
<h1>Symfony Rattrapage</h1>
<div class="container">
	{% for post in posts %}
		<div class="postBlock">
			<div class="titleBlock">
				<span class="title">
					<a href="{{ path("show_page", {'slug': post.slug})}}">
						{{ post.title }}
					</a>
				</span>
			</div>
			<div class="contentBlock">
				{{ post.content|length > 150 ? post.content|slice(0, 150) ~ '...' : post.content }}
			</div>
			<div class="continue">
				<a href="{{ path("show_page", {'slug': post.slug})}}">
				Lire la suite >>	
				</a>
			</div>
		</div>
	{% endfor %}
